<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:srcCompat="@drawable/alumni_logo" />
        <Button
            android:id="@+id/btnOpenAdminUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin User Management"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnOpenInstitutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Institutions Management"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnControlPanelLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Control Panel Login"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/btnAlumniRegister"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Register" />

            <Button
                android:id="@+id/btnAlumniLogin"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Login" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btnBackupDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backup Database"
        android:onClick="backupDatabase"
        android:layout_marginTop="16dp"/>

</LinearLayout>
