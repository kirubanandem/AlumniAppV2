<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAddAlumni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Alumni" />

        <Button
            android:id="@+id/btnViewAlumni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View Records" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="440dp"
            app:srcCompat="@drawable/alumni_logo" />

    </LinearLayout>
    <Button
        android:id="@+id/btnBackupDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Backup &amp; Share Database"
        android:layout_marginTop="8dp"
        android:onClick="requestUserToPickFolder" />
</LinearLayout>
